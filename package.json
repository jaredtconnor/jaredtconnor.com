{
  "name": "personal-site-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "check": "pnpm lint && pnpm check-types && pnpm build",
    "check:fix": "pnpm lint:fix && pnpm format",
    "dev:landing": "turbo run dev --filter=landing",
    "dev:blog": "turbo run dev --filter=blog",
    "dev:cms": "turbo run dev --filter=@repo/cms",
    "dev:backend": "turbo run dev --filter=@repo/backend",
    "build:landing": "turbo run build --filter=landing",
    "build:blog": "turbo run build --filter=blog",
    "build:cms": "turbo run build --filter=@repo/cms",
    "build:backend": "turbo run build --filter=@repo/backend",
    "cms:types": "turbo run generate:types --filter=@repo/cms",
    "cms:migrate": "turbo run migrate --filter=@repo/cms",
    "sst:dev": "sst dev",
    "sst:deploy": "sst deploy",
    "sst:deploy:development": "sst deploy --stage development",
    "sst:deploy:staging": "sst deploy --stage staging", 
    "sst:deploy:production": "sst deploy --stage production",
    "sst:remove": "sst remove",
    "sst:remove:development": "sst remove --stage development",
    "sst:remove:staging": "sst remove --stage staging",
    "sst:remove:jaredconnor": "sst remove --stage jaredconnor",
    "sst:console": "sst console",
    "sst:secret": "sst secret",
    "cleanup": "./scripts/cleanup.sh",
    "cleanup:jaredconnor": "./scripts/cleanup.sh jaredconnor",
    "cleanup:local": "./scripts/cleanup.sh local"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prettier": "^3.5.0",
    "sst": "3.17.10",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
