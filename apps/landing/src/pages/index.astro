---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import { HOME } from "@consts";
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="max-w-2xl">
      <h1 class="animate text-3xl font-bold text-black dark:text-white mb-8">
        Jared Connor
      </h1>
      
      <section class="animate space-y-4 mb-12">
        <h2 class="text-xl font-semibold text-black dark:text-white">Me</h2>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
          I'm a developer, data engineer, and financial analyst at Umpqua Bank. I build scalable systems and APIs, wrangle millions of records for real-time liquidity reporting, and love solving problems at the intersection of data, finance, and technology.
        </p>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
          Whether I'm designing microservices, building econometric models, or hacking together a new shell in C, I'm always looking for ways to make an impact. I believe in the power of tech to solve real-world problems.
        </p>
      </section>

      <section class="animate space-y-4 mb-12">
        <h2 class="text-xl font-semibold text-black dark:text-white">Work</h2>
        <ul class="space-y-3">
          <li class="flex justify-between items-start">
            <div>
              <div class="font-medium text-black dark:text-white">Umpqua Bank</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Financial Analyst, Treasury</div>
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-500">Oct 2017 – Present</div>
          </li>
          <li class="flex justify-between items-start">
            <div>
              <div class="font-medium text-black dark:text-white">Simple Finance</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Customer Relations</div>
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-500">Aug 2016 – Aug 2017</div>
          </li>
        </ul>
      </section>

      <section class="animate space-y-4 mb-12">
        <h2 class="text-xl font-semibold text-black dark:text-white">Projects</h2>
        <ul class="space-y-2">
          <li>
            <a href="https://github.com/jaredtconnor/smallsh" target="_blank" class="group block">
              <div class="font-medium text-black dark:text-white group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors">Smallsh</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">A Unix-based shell written in C</div>
            </a>
          </li>
          <li>
            <a href="https://github.com/jaredtconnor/reddit-archiver" target="_blank" class="group block">
              <div class="font-medium text-black dark:text-white group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors">Reddit Archiver</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Flask CRUD web app with MySQL backend</div>
            </a>
          </li>
          <li>
            <a href="https://github.com/jaredtconnor/wikipedia-table-scraper" target="_blank" class="group block">
              <div class="font-medium text-black dark:text-white group-hover:text-gray-600 dark:group-hover:text-gray-400 transition-colors">Wikipedia Table Scraper</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Python REST API for parsing Wikipedia tables</div>
            </a>
          </li>
        </ul>
      </section>

      <section class="animate space-y-4 mb-12">
        <h2 class="text-xl font-semibold text-black dark:text-white">Education</h2>
        <ul class="space-y-3">
          <li>
            <div class="font-medium text-black dark:text-white">Oregon State University</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">B.S. Computer Science, 2021</div>
          </li>
          <li>
            <div class="font-medium text-black dark:text-white">University of Oregon</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">B.S. Economics, 2016</div>
          </li>
        </ul>
      </section>

      <section class="animate space-y-4 mb-12">
        <h2 class="text-xl font-semibold text-black dark:text-white">Online</h2>
        <ul class="space-y-1">
          <li>
            <Link href="https://github.com/jaredtconnor" external aria-label="Jared Connor on Github">
              GitHub
            </Link>
          </li>
          <li>
            <Link href="mailto:jaredconnor301@gmail.com" aria-label="Email Jared Connor">
              Email
            </Link>
          </li>
          <li>
            <Link href="/blog" aria-label="Jared Connor's Blog">
              Writing
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
