---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { Button, Card, Code } from "@repo/ui/components";
---

<PageLayout title="UI Package Test" description="Testing shared UI components">
  <Container>
    <div class="space-y-8">
      <h1 class="text-3xl font-bold mb-8">UI Package Test Page (Astro)</h1>
      
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold">Button Component</h2>
        <div class="flex gap-4 flex-wrap">
          <Button appName="landing" variant="primary" client:load>
            Primary Button
          </Button>
          <Button appName="landing" variant="secondary" client:load>
            Secondary Button
          </Button>
          <Button appName="landing" variant="outline" client:load>
            Outline Button
          </Button>
        </div>
        
        <div class="flex gap-4 flex-wrap">
          <Button appName="landing" size="sm" client:load>
            Small Button
          </Button>
          <Button appName="landing" size="md" client:load>
            Medium Button
          </Button>
          <Button appName="landing" size="lg" client:load>
            Large Button
          </Button>
        </div>
      </section>

      <section class="space-y-4">
        <h2 class="text-2xl font-semibold">Card Component</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <Card
            title="Example Card"
            href="https://example.com"
            className="p-6 border rounded-lg hover:shadow-lg transition-shadow"
            client:load
          >
            This is an example card component from the shared UI package in Astro.
          </Card>
          
          <Card
            title="Another Card"
            href="https://github.com"
            className="p-6 border rounded-lg hover:shadow-lg transition-shadow"
            client:load
          >
            Cards work seamlessly between Astro and Next.js applications.
          </Card>
        </div>
      </section>

      <section class="space-y-4">
        <h2 class="text-2xl font-semibold">Code Component</h2>
        <div class="space-y-2">
          <p>Inline code: <Code className="bg-gray-100 px-2 py-1 rounded" client:load>astro build</Code></p>
          <div class="bg-gray-50 p-4 rounded">
            <Code className="block bg-gray-800 text-green-400 p-4 rounded font-mono text-sm" client:load>
{`---
// Astro frontmatter
import { Button } from "@repo/ui/components";
---
<Button appName="landing">Click me!</Button>`}
            </Code>
          </div>
        </div>
      </section>
    </div>
  </Container>
</PageLayout>
