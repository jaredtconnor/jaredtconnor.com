{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**", 
        "!.next/cache/**",
        "dist/**",
        ".astro/**"
      ],
      "env": ["NODE_ENV", "DATABASE_URL", "API_URL", "NEXTAUTH_SECRET", "PAYLOAD_SECRET"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "DATABASE_URL", "API_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "format": {
      "inputs": ["**/*.{ts,tsx,js,jsx,md,json}"],
      "cache": false
    },
    "generate:types": {
      "cache": false
    },
    "migrate": {
      "cache": false
    }
  }
}
